@model CSDASSETSYSTEM.Models.Core.Person



<!DOCTYPE html>

<html>
<head>
    <title>PersonInformation</title>
</head>
<body>
    <div>
        <table class="table table-hover">
            <tbody>
                <tr>
                    <th scope="col">Person Information</th>
                    <th scope="col"></th>
                </tr>
                <tr>
                    <td>Id</td>
                    <td>@Html.DisplayFor(x=>x.Id)</td>
                </tr>
                <tr>
                    <td>Name</td>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <td>Company Id</td>
                    <td>@Html.DisplayFor(x => x.CompanyID)</td>
                </tr>
                <tr>
                    <td>Department Name</td>
                    <td>@Html.ActionLink(Model.Department, "DepartmentDetailsWithMembers", "Marieniel", new { depcode = Model.Department}, null)</td>
                </tr>
            </tbody>
        </table>


        @Html.ActionLink("BackToList","ListOfDepartment")

    </div>
</body>
</html>
